{
	"compilerOptions": {
		"checkJs": false,
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"target": "es2020",
		"module": "es2015",
		"jsx": "react",
		"baseUrl": "src"
	},
	"include": ["src/**/*"],
	"exclude": [
		"dist",
		"node_modules",
		"**/node_modules/*",
		"build",
		".vscode",
		"coverage",
		".npm",
		".yarn"
	],
	"typeAcquisition": {
		"enable": true,
		"include": ["react", "react-dom", "jest", "testing-library__jest-dom"]
	}
}
