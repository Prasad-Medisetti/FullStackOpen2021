{
	"name": "phonebook-backend",
	"version": "1.0.0",
	"description": "Phonebook Backend",
	"main": "index.js",
	"scripts": {
		"start": "node index.js",
		"dev": "NODE_ENV=development nodemon index.js",
		"test": "echo \"Error: no test specified\" && exit 1",
		"build:ui": "rm -rf public && cd ../phonebook-frontend && yarn run build --prod && cp -r build ../phonebook-backend/public",
		"deploy": "git push heroku master",
		"msg": "timestamp=$(date +\"%A, %d %B, %Y %I:%M %r\") && echo \"automated deployment - $timestamp\";",
		"deploy:full": "yarn run build:ui && git add . && timestamp=$(date +\"%A, %d %B, %Y %I:%M %r\")  && git commit -m \"UI Build - $timestamp\" && yarn run deploy",
		"lint": "eslint .",
		"logs:prod": "heroku logs --tail"
	},
	"author": "Prasad Medisetti",
	"license": "MIT",
	"devDependencies": {
		"eslint": "^7.32.0",
		"nodemon": "^2.0.12"
	},
	"dependencies": {
		"cors": "^2.8.5",
		"dotenv": "^10.0.0",
		"express": "^4.17.1",
		"mongoose": "^6.0.5",
		"mongoose-unique-validator": "^2.0.3",
		"morgan": "^1.10.0"
	}
}
